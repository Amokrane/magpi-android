<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dip" >

            <TableRow android:gravity="center_vertical|center_horizontal" >

                <ImageView
                    android:id="@+id/icon_of_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:src="@drawable/ic_launcher" />
            </TableRow>

            <TableRow android:gravity="center_vertical|center_horizontal" >

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="MagPi for Android"
                    android:textColor="#000" />
            </TableRow>

            <TableRow android:gravity="center_vertical|center_horizontal" >

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Version 1.0"
                    android:textColor="#000" />
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#000" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layout_image_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/credit_andrea"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Developed by Andrea Stagi"
                android:textColor="#000" />

            <TextView
                android:id="@+id/credit_merin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Graphics by Marta Calistri"
                android:layout_marginBottom="10dip"
                android:textColor="#000" />



            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This app is an open source product, built upon the following open source projects:"
                android:textColor="#000" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_image_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Android-rss"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dip"
                    android:autoLink="web"
                    android:gravity="center_vertical|center_horizontal"
                    android:linksClickable="true"
                    android:text="https://github.com/ahorn/android-rss"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Async-http"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dip"
                    android:autoLink="web"
                    android:gravity="center_vertical|center_horizontal"
                    android:linksClickable="true"
                    android:text="http://loopj.com/android-async-http"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="ActionBarSherlock"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dip"
                    android:autoLink="web"
                    android:gravity="center_vertical|center_horizontal"
                    android:linksClickable="true"
                    android:text="http://actionbarsherlock.com"
                    android:textColor="#000" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#000" />

        <TextView
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Copyright Â©2013 MagPi, Andrea Stagi. All the code is relased under MIT lincese."
            android:textColor="#000" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#000" />
    </LinearLayout>

</ScrollView>